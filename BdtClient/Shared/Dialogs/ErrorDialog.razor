<MudDialog>
    <DialogContent>
        <MudStack>
            <MudText Typo="Typo.body2">@ErrorText</MudText>
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Ok">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public required string ErrorText { get; set; }

    private void Ok()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}
