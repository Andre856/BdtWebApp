@page "/"

@using BdtShared.Models.App;
@using System.IdentityModel.Tokens.Jwt;
@using BdtServer.AppServices.App;
@using BdtServer.AppServices.Theme;

@inject IAppService _appService
@inject BdtServer.AppServices.Theme.ThemeService _themeService
@inject NavigationManager _navigation

<PageLoading />

@code {
    protected override async Task OnInitializedAsync()
    {
        //await SecureStorage.SetAsync(nameof(Setting.UserBasicDetail), "");//REMOVE THIS
        //Setting.UserBasicDetail = null;
        //string userDetailsString = await SecureStorage.GetAsync(nameof(Setting.UserBasicDetail));
        string? userDetailsString = null;

        if (!string.IsNullOrWhiteSpace(userDetailsString))
        {
            var userBasicDetail = JsonConvert.DeserializeObject<UserBasicDetail>(userDetailsString);

            var handler = new JwtSecurityTokenHandler();
            var jsonToken = handler.ReadToken(userBasicDetail.AccessToken) as JwtSecurityToken;

            Setting.UserBasicDetail = userBasicDetail;

            await _themeService.ChangeColorTone(Setting.UserBasicDetail.IsDarkMode);

            if (jsonToken.ValidTo < DateTime.UtcNow)
            {
                bool isTokenRefreshed = await _appService.RefreshToken();

                if (isTokenRefreshed)
                {
                    _navigation.NavigateTo("/dashboard");
                }
                else
                {
                    Setting.UserBasicDetail = null;

                    _navigation.NavigateTo("/login");
                }
            }
            else if (Setting.UserBasicDetail.IsFirstLogin)
            {
                _navigation.NavigateTo("/getstarted");
            }
            else
            {
                _navigation.NavigateTo("/dashboard");
            }
        }
        else
        {
            _navigation.NavigateTo("/login");
        }
    }
}
