                <MudProgressLinear Style="width:100%;margin:6px 0 !important" Color="MudBlazor.Color.Primary" Size="MudBlazor.Size.Medium" Min="0" Max="1" Value="@(UserLevel is null ? 0 : UserLevel.Id >= 7 ? 1 : 0)" Class="my-7" />
