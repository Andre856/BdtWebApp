            </MudStack>
            <MudStack Style="width:12%;border-right: 0.5px dashed rgba(33,150,243,1);" Spacing="1">
                <MudProgressLinear Style="width:100%;margin:6px 0 !important" Color="MudBlazor.Color.Primary" Size="MudBlazor.Size.Medium" Min="0" Max="1" Value="@(UserLevel is null ? 0 : UserLevel.Id >= 4 ? 1 : 0)" Class="my-7" />
