@using Bdt.Shared.Dtos.WorkoutType

<style>
    .mud-input.mud-input-outlined .mud-input-outlined-border {
        border-radius: 50px;
        border: 1px solid rgba(0, 0, 0, 0.12);
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    }
</style>

<MudSelect Class="mb-3" T="string" Label="Workout" Variant="MudBlazor.Variant.Filled" AnchorOrigin="Origin.BottomCenter" SelectedValuesChanged="@SelectedItemChanged" @bind-Value="SelectedBurpeeType">
    @foreach (var workoutType in WorkoutTypes)
    {
        <MudSelectItem Value="@workoutType.Name" />
    }
</MudSelect>

@code {
    [Parameter] public required IEnumerable<WorkoutTypeDto> WorkoutTypes { get; set; }
    [Parameter] public required string SelectedBurpeeType { get; set; }
    [Parameter] public EventCallback SelectedItemChanged { get; set; }

    private async Task OnSelectedValuesChanged()
    {
        await SelectedItemChanged.InvokeAsync(SelectedBurpeeType);
    }
}
