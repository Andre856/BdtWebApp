                <MudText Style="font-size:0.6rem" Typo="Typo.caption" Align="MudBlazor.Align.Center">G</MudText>
            </MudStack>
        </MudGrid>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public LevelDto UserLevel { get; set; }
    [Parameter] public LevelDto SixCountLevel { get; set; }
    [Parameter] public LevelDto NavySealsLevel { get; set; }

    private int UserLevelId;
